@model BookListViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-6">
        <h1>Books of the Bible</h1>
    </div>    
    <div class="col-md-6">
        <span>@Html.ActionLink("Saved Passages", "ListSavedPassages")</span>
    </div>
</div>
@foreach (var book in Model.Books)
{
    <div class="row">
        <div class="col-md-12">
            @Html.ActionLink(book.BookName, "Passage", new { bookID = book.BookName, chapterNumber = 1, verseStart = 1, verseEnd = 1 })
        </div>
    </div>
}